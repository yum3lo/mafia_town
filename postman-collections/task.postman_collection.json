{
  "info": {
    "name": "Task Service",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json",
    "variable": [
      {
        "key": "base_url",
        "value": "http://localhost:8000"
      },
      {
        "key": "task_id",
        "value": "1"
      }
    ]
  },
  "item": [
    {
      "name": "Create Task",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "url": {
          "raw": "{{base_url}}/tasks",
          "host": [
            "{{base_url}}"
          ],
          "path": [
            "tasks"
          ]
        },
        "body": {
          "mode": "raw",
          "raw": "{ \"role\": \"cop\", \"task_description\": \"Perform a routine checkup on locations x, y and z.\" }"
        }
      }
    },
    {
      "name": "List Tasks",
      "request": {
        "method": "GET",
        "url": {
          "raw": "{{base_url}}/tasks",
          "host": [
            "{{base_url}}"
          ],
          "path": [
            "tasks"
          ]
        }
      }
    },
    {
      "name": "Get Task",
      "request": {
        "method": "GET",
        "url": {
          "raw": "{{base_url}}/tasks/{{task_id}}",
          "host": [
            "{{base_url}}"
          ],
          "path": [
            "tasks",
            "{{task_id}}"
          ]
        }
      }
    },
    {
      "name": "Update Task",
      "request": {
        "method": "PUT",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "url": {
          "raw": "{{base_url}}/tasks/{{task_id}}",
          "host": [
            "{{base_url}}"
          ],
          "path": [
            "tasks",
            "{{task_id}}"
          ]
        },
        "body": {
          "mode": "raw",
          "raw": "{ \"role\": \"cop\",\"task_description\":\"Updated description\" }"
        }
      }
    },
    {
      "name": "Delete Task",
      "request": {
        "method": "DELETE",
        "url": {
          "raw": "{{base_url}}/tasks/{{task_id}}",
          "host": [
            "{{base_url}}"
          ],
          "path": [
            "tasks",
            "{{task_id}}"
          ]
        }
      }
    },
    {
      "name": "Assign Task",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "url": {
          "raw": "{{base_url}}/tasks/assign",
          "host": [
            "{{base_url}}"
          ],
          "path": [
            "tasks",
            "assign"
          ]
        },
        "body": {
          "mode": "raw",
          "raw": "{ \"user_id\": 1, \"task_id\": 2}"
        }
      }
    },
    {
      "name": "Remove Assignment",
      "request": {
        "method": "DELETE",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "url": {
          "raw": "{{base_url}}/tasks/assign",
          "host": [
            "{{base_url}}"
          ],
          "path": [
            "tasks",
            "assign"
          ]
        },
        "body": {
          "mode": "raw",
          "raw": "{ \"user_id\": 1, \"task_id\": 2 }"
        }
      }
    },
    {
      "name": "Assignment History",
      "request": {
        "method": "GET",
        "url": {
          "raw": "{{base_url}}/tasks/2/history/assignments",
          "host": [
            "{{base_url}}"
          ],
          "path": [
            "tasks",
            "2",
            "history",
            "assignments"
          ]
        }
      }
    },
    {
      "name": "Change Status",
      "request": {
        "method": "PATCH",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "url": {
          "raw": "{{base_url}}/tasks/2/status",
          "host": [
            "{{base_url}}"
          ],
          "path": [
            "tasks",
            "2",
            "status"
          ]
        },
        "body": {
          "mode": "raw",
          "raw": "{ \"status\":\"in_progress\",\"updated_by\":2,\"note\":\"Started by assignee\" }"
        }
      }
    },
    {
      "name": "Complete Task",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "url": {
          "raw": "{{base_url}}/tasks/2/complete",
          "host": [
            "{{base_url}}"
          ],
          "path": [
            "tasks",
            "2",
            "complete"
          ]
        },
        "body": {
          "mode": "raw",
          "raw": "{ \"completed_by\": 1, \"status\":\"completed\" }"
        }
      }
    },
    {
      "name": "Completion History",
      "request": {
        "method": "GET",
        "url": {
          "raw": "{{base_url}}/tasks/2/history/completions",
          "host": [
            "{{base_url}}"
          ],
          "path": [
            "tasks",
            "2",
            "history",
            "completions"
          ]
        }
      }
    },
    {
      "name": "Available Tasks",
      "request": {
        "method": "GET",
        "url": {
          "raw": "{{base_url}}/tasks/available",
          "host": [
            "{{base_url}}"
          ],
          "path": [
            "tasks",
            "available"
          ]
        }
      }
    },
    {
      "name": "Candidates",
      "request": {
        "method": "GET",
        "url": {
          "raw": "{{base_url}}/tasks/1/candidates",
          "host": [
            "{{base_url}}"
          ],
          "path": [
            "tasks",
            "1",
            "candidates"
          ]
        }
      }
    },
    {
      "name": "End of day status",
      "request": {
        "method": "GET",
        "url": {
          "raw": "{{base_url}}/tasks/status",
          "host": [
            "{{base_url}}"
          ],
          "path": [
            "tasks",
            "status"
          ]
        }
      }
    },
    {
      "name": "Subscribe Task SSE",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Accept",
            "value": "text/event-stream"
          }
        ],
        "url": {
          "raw": "{{base_url}}/tasks/{{task_id}}/stream",
          "host": [
            "{{base_url}}"
          ],
          "path": [
            "tasks",
            "{{task_id}}",
            "stream"
          ]
        }
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test(\"SSE subscription status\", function () {",
              "  pm.response.to.be.oneOf([200,204]);",
              "});"
            ],
            "type": "text/javascript"
          }
        }
      ]
    },
    {
      "name": "Publish Task Event",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "url": {
          "raw": "{{base_url}}/tasks/{{task_id}}/publish",
          "host": [
            "{{base_url}}"
          ],
          "path": [
            "tasks",
            "{{task_id}}",
            "publish"
          ]
        },
        "body": {
          "mode": "raw",
          "raw": "{ \"message\": \"test event from Postman\", \"meta\": { \"source\": \"postman\" } }"
        }
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test(\"publish accepted\", function () {",
              "    pm.response.to.have.status([200,201]);",
              "});"
            ],
            "type": "text/javascript"
          }
        }
      ]
    }
  ]
}
